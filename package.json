{
  "name": "auzap-ai-connect",
  "version": "1.0.0",
  "description": "Plataforma Auzap AI Connect - WhatsApp Business Intelligence",
  "private": true,
  "workspaces": {
    "packages": [
      "frontend",
      "backend"
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:api": "playwright test tests/api/",
    "test:auth": "playwright test tests/e2e/auth-flow.spec.ts",
    "test:security": "playwright test tests/security/",
    "test:ui": "playwright test tests/ui/",
    "test:responsive": "playwright test tests/responsive/",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:ci": "tsx tests/ci/test-runner.ts",
    "test:install": "playwright install",
    "test:report": "playwright show-report",
    "lint": "npm run lint:backend",
    "lint:backend": "cd backend && npm run lint",
    "clean": "npm run clean:backend",
    "clean:backend": "cd backend && npm run clean"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.5",
    "concurrently": "^9.1.0",
    "jest-environment-jsdom": "^30.1.2",
    "msw": "^2.11.3",
    "playwright": "^1.55.1",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "whatsapp",
    "ai",
    "chatbot",
    "petshop",
    "automation",
    "testing",
    "e2e",
    "playwright"
  ],
  "author": "Auzap.ai",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "dotenv": "^17.2.2",
    "embla-carousel-react": "^8.6.0",
    "helmet": "^8.1.0",
    "input-otp": "^1.4.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.6",
    "prom-client": "^15.1.3"
  }
}
